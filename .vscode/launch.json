{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug Class_and_object", // — Название конфигурации (отображается в выпадающем списке отладки).
      "type": "lldb", // — Указывает тип отладчика (LLDB для macOS/Linux).
      "request": "launch", // — Запуск программы с нуля (альтернатива: "attach" для подключения к работающему процессу).
      "args": [], // — Аргументы командной строки для программы (пустой список = без аргументов).
      "program": "${workspaceFolder}/build/Debug/bin/ExampleClass", // — Абсолютный путь к исполняемому файлу:
      "cwd": "${workspaceFolder}", // — Рабочая директория при запуске (корень проекта).
      "preLaunchTask": "Build", // Выполнение задачи из task.json перед отладкой
      "console": "integratedTerminal", // — Запуск программы во встроенном терминале VS Code (альтернативы: internalConsole, externalTerminal).
      "internalConsoleOptions": "neverOpen", // — Блокирует автоматическое открытие отдельной вкладки отладчика.
      "sourceMap": { // — Сопоставление путей для отладчика( Решает проблему, когда отладчик ищет исходники по неверному пути)
        "/build": "${workspaceFolder}/build"
      }
    },
